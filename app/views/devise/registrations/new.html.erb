<div class="container">
  <div class = "registraions-container">

  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <h4> Workpeople </h4>
    <p> Sign Up to add your workplace</p>

    <div class = 'form-group'>
    <%= f.email_field :email, :autofocus => true, class:"form-control", placeholder: 'Email' %></div>

    <div class = 'form-group'>
    <%= f.email_field :name, class:"form-control", placeholder: 'Name' %></div>

    <div class = 'form-group'>
    <%= f.password_field :password, class:"form-control", placeholder: 'Password' %></div>

    <div class = 'form-group'>
    <%= f.password_field :password_confirmation, class:"form-control", placeholder: 'Password Confirmation' %></div>

    <div class = "pull-right"><%= f.submit "Sign Up", class: "btn btn-primary" %></div>
  <% end %>
  <br />
  <br />
  <br />
  <%= link_to "Already have account? Sign In", new_owner_session_path, class: "btn btn-default" %>   
  </div>
</div>